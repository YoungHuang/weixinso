<%- include ../header %>
  <script>
    function disp_confirm() {
      confirm("Press a button");
    }
  </script>
  </head>
  
  <body>
    <%- include ../nav %>
    <div class="container">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">微信公众号</h3>
          </div>
          <div class="panel-body para">
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>微信号</th>
                      <th>操作</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% wxusers.forEach(function (wxuser, index) { %>
                      <tr>
                        <td><%= wxuser.name %></td>
                        <td>
                          <a href="edit/<%= wxuser._id %>" class="btn btn-primary btn-sm" role="button">Edit</a>
                          <a href="delete/<%= wxuser._id %>?p=<%= page %>" class="btn btn-danger btn-sm" role="button" onclick="return confirm('确认删除？')">Delete</a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div><!--row-->
            <div class="row">
              <div class="col-md-4 col-md-offset-4">
                <%- include ../paging %>
              </div>
            </div><!--row-->
          </div><!--panel-body-->
        </div><!--panel-->
    </div><!--container-->
  </body>

</html>