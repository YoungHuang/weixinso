<%- include ../header %>
    <style>
      img.thumb {
        height: 60px;
      }
      .para .thumbnail {
       border: none; 
      }
      .para h3 {
        text-align: center;
        font-size:14px;
        line-height: 1;
      }
      .para .caption {
        padding: 0px;
      }
    </style>
  </head>
  
  <body>
    <%- include ../nav %>
    <div class="container">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">搜索结果：</h4>
          </div>
          <div class="panel-body para">
          <%
          var len = wxUsers.length;
          if(len <1 ) {
          %>
          <h3>没有查询到符合的结果</h3>
          <%
          } else {
            if (wxUsers.length > 6) {
              len = 6;
            }
          %>
            <div class="row">
          <%
            for (var i = 0; i < len; i++) {
              var user = wxUsers[i];
          %>
              <div class="col-md-2">
                <div class="thumbnail">
                  <img class="thumb" clcc data-src="holder.js/300x200" alt="default" src="<%= user.logoPath %>">
                  <div class="caption">
                    <h3><a  class='' href='/wxuser/details/<%= user._id %>'><%= user.name %></a></h3>
                  </div>
                </div>
              </div>
          <%
            }
          %>
            </div><!--row-->
          <%
            if (wxUsers.length > 6) {
              len = wxUsers.length;
              if (wxUsers.length > 12) {
                len = 12;
              }
          %>
            <div class="row">
          <%
              for (var i = 6; i < len; i++) {
                var user = wxUsers[i];
          %>
              <div class="col-md-2">
                <div class="thumbnail">
                  <img class="thumb" clcc data-src="holder.js/300x200" alt="default" src="<%= user.logoPath %>">
                  <div class="caption">
                    <h3><a  class='' href='/wxuser/details/<%= user._id %>'><%= user.name %></a></h3>
                  </div>
                </div>
              </div>
          <%
              }
          %>
            </div><!--row-->
          <%
            }
          }
          %>
          <div class="row">
              <div class="col-md-4 col-md-offset-5">
                <div class="btn-group">
                  <% if (!isFirstPage) { %>
                  <a href="?p=<%= page-1 %>&keywords=<%= keywords %>" class="btn btn-default" role="button">上一页</a>
                  <% } %>
                  <button type="button" class="btn btn-default"><%= page %></button>
                  <% if (!isLastPage) { %>
                  <a href="?p=<%= page+1 %>&keywords=<%= keywords %>" class="btn btn-default" role="button">下一页</a>
                  <% } %>
                </div>
              </div>
            </div><!--row-->
          </div><!--panel-body-->
        </div><!--panel-->
    </div><!--container-->
  </body>

</html>