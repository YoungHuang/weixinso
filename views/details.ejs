<%- include header %>
	<style>
      .details-logo {
        width: 72px; 
        height: 72px;
      }
      .details-title {
        margin-left:25px;
      }
      .details-code {
        width: 230px; 
        height: 230px;
      }
      .code_label {
        margin-left: 55px;
      }
      .detail-desc {
        text-indent: 1em;
      }
    </style>
  </head>
  
  <body>
    <%- include nav %>
    <div class="container">
      <div class="row">
        <div class="col-md-1">
          <img class="img-thumbnaid details-logo" alt="default" src="<%= wxPublicUser[0].picturePath %>">
        </div>
        <div class="col-md-6">
          <h3 class="details-title"><%= wxPublicUser[0].name %></h3>
          <dl class="dl-horizontal">
            <dt>微信号：</dt>
            <dd><%= wxPublicUser[0].name %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>账号类型：</dt>
            <dd><%= wxPublicUser[0].type %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>微信号：</dt>
            <dd><%= wxPublicUser[0].simpleNumber %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>关键词：</dt>
            <dd><%= wxPublicUser[0].keyWord %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>网站地址：</dt>
            <dd><a href="<%= wxPublicUser[0].webAddress %>"><%= wxPublicUser[0].webAddress %></a></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>收录时间：</dt>
            <dd><%= wxPublicUser[0].recordDate %></dd>
          </dl>
        </div>
        <div class="col-md-5">
          <img class="img-thumbnaid details-code" alt="default" src="<%= wxPublicUser[0].qrPath %>">
          <p class="code_label">二维码扫描订阅</p>
        </div>
      </div>
      
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">微信描述：</h3>
          </div>
          <div class="panel-body">
            <p class="detail-desc">
                <%= wxPublicUser[0].desc %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </body>

</html>