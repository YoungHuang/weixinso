<%- include header %>
    <style>
      img.thumb {
        height: 60px;
      }
      .para .thumbnail {
       border: none; 
      }
      .para h3 {
        text-align: center;
        font-size:14px;
        line-height: 1;
      }
      .para .caption {
        padding: 0px;
      }
    </style>
  </head>
  
  <body>
    <%- include nav %>
    <div class="container">
      <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">热门微信公众号</h3>
          </div>
          <div class="panel-body para">
            <div class="row">
              <%  var i;
                  for (i = 0; i < 6; i++) {
                    var user = wxPublicUsers[i];
              %>
              <div class="col-xs-6 col-md-2">
                <div class="thumbnail">
                  <img class="thumb" clcc data-src="holder.js/300x200" alt="default" src="<%= user.logoPath %>">
                  <div class="caption">
                    <h3><a  class='' href='/details/<%= user._id %>'><%= user.name %></a></h3>
                  </div>
                </div>
              </div>
              <% } %>
            </div><!--row-->
            
            <div class="row">
              <%  var i;
                  for (i = 6; i < 12; i++) {
                    var user = wxPublicUsers[i];
              %>
              <div class="col-xs-6 col-md-2">
                <div class="thumbnail">
                  <img class="thumb" clcc data-src="holder.js/300x200" alt="default" src="<%= user.logoPath %>">
                  <div class="caption">
                    <h3><a  class='' href='/details/<%= user._id %>'><%= user.name %></a></h3>
                  </div>
                </div>
              </div>
              <% } %>
            </div><!--row-->
          </div><!--panel-body-->
        </div><!--panel-->
    </div><!--container-->
  </body>
</html>