<%- include ../header %>
  <script>
    function disp_confirm() {
      confirm("Press a button");
    }
  </script>
  </head>
  
  <body>
    <%- include ../nav %>
    <div class="container">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">文章管理</h3>
          </div>
          <div class="panel-body para">
            <div class="row">
              <div class="col-md-2">
                <div class="panel-group" id="accordion">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                          文章管理
                        </a>
                      </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in">
                        <ul class="nav nav-pills nav-stacked">
                          <a href="#" class="list-group-item active">List</a>
                        </ul>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-10">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>标题</th>
                      <th>操作</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% posts.forEach(function (post, index) { %>
                      <tr>
                        <td><%= post.title %></td>
                        <td>
                          <a href="edit/<%= post._id %>?p=<%= page %>" class="btn btn-primary btn-sm" role="button">Edit</a>
                          <a href="delete/<%= post._id %>?p=<%= page %>" class="btn btn-danger btn-sm" role="button" onclick="return confirm('确认删除？')">Delete</a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div><!--row-->
            <div class="row">
              <div class="col-md-4 col-md-offset-5">
                <%- include ../paging %>
              </div>
            </div><!--row-->
          </div><!--panel-body-->
        </div><!--panel-->
    </div><!--container-->
  </body>

</html>