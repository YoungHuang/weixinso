<%- include ../header %>
  </head>
  
  <body>
    <%- include ../nav %>
    <div class="container">
      <div class="row">
        <div class="col-md-2">
          <div class="panel-group" id="accordion">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                    文章管理
                  </a>
                </h4>
              </div>
              <div id="collapseOne" class="panel-collapse collapse in">
                  <ul class="nav nav-pills nav-stacked">
                    <a href="../list" class="list-group-item">List</a>
                    <a href="create" class="list-group-item">Create</a>
                  </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-5">
          <h3 class="details-title"><%= post.title %></h3>
          <dl class="dl-horizontal">
            <dt>标题：</dt>
            <dd><%= post.title %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>链接：</dt>
            <dd><%= post.link %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>类型：</dt>
            <dd><%= post.type %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>赞：</dt>
            <dd><%= post.favs %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>标签：</dt>
            <dd>
              <span class="label label-default"><%= (post.tags && post.tags[0]) || '' %></span>
              <span class="label label-primary"><%= (post.tags && post.tags[1]) || '' %></span>
              <span class="label label-success"><%= (post.tags && post.tags[2]) || '' %></span>
            </dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>收录时间：</dt>
            <dd><%= post.createDate %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>摘要：</dt>
            <dd><%= post.summary %></dd>
          </dl>
      </div>
    </div>
  </body>

</html>