<div class="form-group">
  <label class="col-sm-2 control-label">标题</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" name="title" value="<%= post.title || '' %>">
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">链接</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" name="link" value="<%= post.link || '' %>">
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">标签</label>
  <div class="col-sm-3">
    <input type="text" class="form-control" name="tag1" value="<%= (post.tags && post.tags[0]) || '' %>">
  </div>
  <div class="col-sm-3 col-sm-offset-1">
    <input type="text" class="form-control" name="tag2" value="<%= (post.tags && post.tags[1]) || '' %>">
  </div>
  <div class="col-sm-3">
    <input type="text" class="form-control" name="tag3" value="<%= (post.tags && post.tags[2]) || '' %>">
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">摘要</label>
  <div class="col-sm-10">
    <textarea class="form-control" rows="3" name="summary"><%= post.summary || '' %></textarea>
  </div>
</div>
